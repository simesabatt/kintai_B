 <% provide(:title, 'basic_info') %>
 
<h1>基本情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: edit_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
      <%= render 'shared/error_messages', object: @user %>

      <%= f.label :basic_time, class: "label-basic-info" %>
      <%= f.time_field :basic_time, class: "form-control" %>

      <%= f.label :work_time, class: "label-basic-info" %>
      <%= f.time_field :work_time, class: "form-control" %>
      
      <%#= f.hidden_field :department, value: @user %>
      
      <%= f.submit '更新', class: "btn btn-primary btn-basic-edit" %>
    <% end %>
  </div>
</div>